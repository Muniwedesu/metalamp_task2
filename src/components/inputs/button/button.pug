//- pass content and type in the constructor or whatever 
mixin button({label, isDisabled = false, styles = [], id = null})
  //- receive a list of classes through attributes param
  //- and type too?
  //- - styles = ...styles;
  - styles = styles.map(x => "button_" + x)
    button(class=["button"], 
      class=styles, 
      class!=attributes.class,
      disabled=isDisabled,
      type!=attributes.type) 
      span.controls-label.button__label= label