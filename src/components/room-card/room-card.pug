include ../inputs/inputs.pug


mixin roomCard({id = "room", roomInfo = { number: "888", type: true, price: "8500", nReviews: "145", img: "room-0.jpg"} } = {id: "room"})
  .room-card
    img(src=require("rooms/"+ roomInfo.img)).room-card__cover
    form.room-card__form
      .card__form-heading_compound.room-info
        h1.room-info__number.
          #[span.room-info__no №&nbsp;]#{roomInfo.number} #[span.room-info__type= roomInfo.type ? "люкс" : ""]
        span.room-info__price #{roomInfo.price + "₽"} #[span.room-info__per-day в сутки]
      ul.room-card__divider
      ul.room-card__reviews
        li
          div *****
        li
          //- поменять цвет текста тут
          p.room-card__reviews-count #[strong #{roomInfo.nReviews}] Отзывов

