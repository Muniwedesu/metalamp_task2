
include ../inputs/inputs.pug
include /components/lists/lists.pug
include /components/compound-heading/compound-heading.pug

- let summaryList = [
- {
-   key:" 9 990₽ х 4 суток",
-   value: "39 960₽",
-   iconVisible: false
- },
- {
-   key: "Сбор за услуги: скидка 2 179₽",
-   value: "0₽",
-   iconVisible: true
- },
- {
-   key: "Сбор за дополнительные услуги",
-   value: "300₽",
-   iconVisible: true
- }]
- let total = {
-  key: "Итого", 
-  value: "38 081Р"
-}
//- mixin dropdown(id, {type, label, placeholder, menuItems, state, isClearable = true})
mixin searchCard({id = "search"} = {id: "search"})
  .card
    form.card__form
      h1.card__form-heading Найдём номера под ваши пожелания
      ul.card__form-elements
        li.card__form-field.card__form-field_separated
          +dropdown(id + "-arrival", {type: "text", label: "Прибытие", placeholder: "ДД.ММ.ГГГГ"})
          +dropdown(id + "-departure", {type: "text", label: "Выезд", placeholder: "ДД.ММ.ГГГГ"})
      p.card__form-field
        +dropdown(id + "-guests", {type: "text", label: "Гости", placeholder: "Сколько гостей"})
      p.card__form-submit.card__form-submit_big-margin
        +button({label: "Подобрать номер", styles: ["with-arrow"]})

//- mixin dropdown(id, {type, label, placeholder, menuItems, state, isClearable = true})
mixin detailsCard({id = "details"} = {id: "details"})
  .card
    form.card__form
      .card__form-heading_compound.room-info
        +compound-heading()
      ul.card__form-elements
        li.card__form-field.card__form-field_separated
          +dropdown(id + "-arrival", {type: "text", label: "Прибытие", placeholder: "ДД.ММ.ГГГГ"})
          +dropdown(id + "-departure", {type: "text", label: "Выезд", placeholder: "ДД.ММ.ГГГГ"})
      p.card__form-field
        +dropdown(id + "-guests", {type: "text", label: "Гости", placeholder: "Сколько гостей"})
      +summary({items: summaryList, total: total})
      p.card__form-submit
        +button({label: "Забронировать", styles: ["with-arrow"]})


mixin registrationCard({id = "registration"} = {id: "registration"})
  .card
    form.card__form
      h1.card__form-heading Регистрация аккаунта
      ul.card__form-elements
        li.card__form-field
          +text("first-name", "text", null, "Имя")
        li.card__form-field
          +text("last-name", "text", null, "Фамилия")
        li.card__form-field
          +radioGroup(null, ["Мужчина", "Женщина"], ["male", "female"], "gender", named = false)
      section.card__form-elements
        p.card__form-field
          +dropdown(id + "-dateOfBirth", {type: "text", label: "Дата рождения", placeholder: "ДД.ММ.ГГГГ"})
      fieldset.card__form-elements
        legend.controls-label Данные для входа в сервис
        li.card__form-field
          +text("email", "text", null, "Email")
        li.card__form-field
          +text("password", "text", null, "Пароль")
        li.card__form-field
          +toggleGroup("", ["Получать спецпредложения"], ["receive"], addName = false)
      section.card__form-submit
        +button({label: "Перейти к оплате", styles: ["with-arrow"]})
      +account(true)


  //- id, type, label, placeholder, ...classes)
mixin loginCard
  .card
    form.card__form
      h1.card__form-heading Войти
      ul.card__form-elements
        li.card__form-field
          +text("email", "text", null, "Email")
        li.card__form-field
          +text("password", "text", null, "Пароль")
      p.card__form-submit
        +button({label: "Войти", styles: ["with-arrow"]})
      +account(false)



mixin account(exists)
  section.card__account
    - let accountStatusText = exists ? "Уже есть аккаунт на Toxin?" : "Нет аккаунта на Toxin?"
    - let buttonLabel = exists ? "Войти" : "Создать"
    p= accountStatusText
    +button({label: buttonLabel, styles: ["outlined"]})(type="button")

