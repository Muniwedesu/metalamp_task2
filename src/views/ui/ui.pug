      div(class="form-elements__column form-elements__controls")
        +checkboxGroup("Checkbox Buttons", 
          ["Можно курить", "Можно с питомцами", "Можно пригласить гостей (до 10 человек)"], 
          ["smoking_allowed", "pets_allowed", "guests_allowed"], 
          true)
        +radioGroup("Radio Buttons", 
          ["Мужчина", "Женщина"],
          ["male", "female"], 
          "gender", 
            true)
        +toggleGroup("Toggle", 
          ["Получать спецпредложения", "Получать спецпредложения"],
          ["receive_special", "not_receive_special"], 
          true)
        .form-elements__likes
          .controls-label like button
          +likes("like button", "like-1", false, 2)
          +likes("like button", "like-12", false, 12)
        +rates("rate button")

      .form-elements__column
        //- +slider()
        .form-elements__range 
          .controls-label range slider
          div slider
        .form-elements__button-block
          div(class="controls-label form-elements__buttons_top") buttons
          .form-elements__buttons
            +button("CLICK ME", false)
            +button("CLICK ME", true)
            +button("CLICK ME", false ,"outlined")
            +button("CLICK ME", true,"outlined")
            +button("CLICK ME", false,"text")
            +button("CLICK ME", true,"text")
          .form-elements__buttons_big
            +button("перейти к оплате", false, "with-arrow")
        .form-elements__pagination
